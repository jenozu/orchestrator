{
  "$schema": "https://schemas.cursor.sh/mcp.config.schema.json",
  "mcpServers": {
    "filesystem": {
      "command": "builtin",
      "args": {
        "tools": [
          "read_file",
          "write_file",
          "edit_file",
          "ls"
        ]
      }
    }
  },
  "policies": {
    "workspaceAllowlist": [
      "./"
    ],
    "pathDenylist": [
      "node_modules/**",
      ".git/**",
      ".venv/**"
    ],
    "maxToolOutputChars": 200000
  }
}